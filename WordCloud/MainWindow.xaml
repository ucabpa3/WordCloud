<Window x:Name="WordCloud" x:Class="WordCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WordCloud"
        Title="WorldCloud" WindowStyle="ThreeDBorderWindow" ResizeMode="CanMinimize" WindowState="Maximized" >
    <Window.DataContext>
        <local:ProjectViewModel/>
    </Window.DataContext>
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    
    <Grid HorizontalAlignment="Stretch" >
        <Grid.Resources>
            
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="3,3,0,3" HorizontalAlignment="Left" Width="280">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="3,3,3,3"  Height="50" VerticalAlignment="Top">
                <Label Grid.Column="0" Content="Path:" Margin="140,10,-140,8" />
                <Label Content="{Binding FullPath}" Margin="118,8,103,10" />
                <Button Width="88" HorizontalAlignment="Left" Margin="0,8,0,0" Content="Browse" Command="{Binding  GetPath}" Height="32" VerticalAlignment="Top" RenderTransformOrigin="-0.045,0.438"/>
        
            </Grid>
            <Grid Grid.Row="1" Margin="3,3"  VerticalAlignment="Bottom">
                <Button Width="88" HorizontalAlignment="Stretch" Content="Generate" Command="{Binding  StartWordCloud}" Height="32" VerticalAlignment="Top" RenderTransformOrigin="-0.045,0.438"/>
            </Grid>
        </Grid>

        <Grid Margin="96,3,-488,10" x:Name="CanvasContainer"  Width="900" ShowGridLines="True" HorizontalAlignment="Left" Grid.ColumnSpan="2" Grid.Column="1" >
            <ItemsControl ItemsSource="{Binding Path=Elements}" Margin="0,0,0,270" >          
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Content}"  FontFamily="Verdana" Opacity="{Binding Path=Opacity}"  FontSize="{Binding Path=FontSize}"  >
                            
                                <TextBlock.Foreground>
                                <SolidColorBrush Color="{Binding Path=Color}"></SolidColorBrush>
                            </TextBlock.Foreground>
                            
                            <TextBlock.InputBindings>
                                <MouseBinding Command="{Binding DataContext.TextBlockClick,RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type TextBlock}}}" MouseAction="LeftClick" />
                            </TextBlock.InputBindings>
                        </TextBlock>
                        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                
                <ItemsControl.ItemsPanel>                
                    <ItemsPanelTemplate>
                        <Canvas ></Canvas>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
               <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter" >
                        <Setter Property="Canvas.Left" Value="{Binding Path=PosX}" />
                        <Setter Property="Canvas.Top" Value="{Binding Path=PosY}" />
                    </Style>

                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </Grid>

       
    </Grid>
</Window>
